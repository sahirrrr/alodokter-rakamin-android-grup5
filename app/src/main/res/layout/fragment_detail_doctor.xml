<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.DetailDoctorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_detail_doctor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_136"
            android:background="@drawable/bg_detail_doctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Toolbar
            android:id="@+id/tb_detail_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_white_back"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/icon_back"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/tv_detail_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/detail_doctor"/>

        </Toolbar>

        <View
            android:id="@+id/view_doctor_spesialis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_92"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:elevation="@dimen/dimens_2"
            android:background="@drawable/bg_dialog"
            app:layout_constraintBottom_toBottomOf="@+id/view_detail_doctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_detail_doctor" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20"
            android:layout_marginStart="@dimen/dimens_16"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/dr_bagas"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16"
            android:elevation="@dimen/dimens_2"
            app:layout_constraintTop_toTopOf="@id/view_doctor_spesialis"
            app:layout_constraintStart_toStartOf="@id/view_doctor_spesialis"
            app:layout_constraintBottom_toTopOf="@id/tv_spesialis_price"/>

        <TextView
            android:id="@+id/tv_spesialis_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            android:layout_marginStart="@dimen/dimens_16"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_14"
            tools:text="@string/spesialis_price"
            android:elevation="@dimen/dimens_2"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
            app:layout_constraintStart_toStartOf="@id/view_doctor_spesialis"
            app:layout_constraintBottom_toBottomOf="@id/view_doctor_spesialis"/>

        <ImageView
            android:id="@+id/iv_photo_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_16"
            tools:src="@drawable/doctor_image"
            android:elevation="@dimen/dimens_2"
            app:layout_constraintTop_toTopOf="@id/view_doctor_spesialis"
            app:layout_constraintEnd_toEndOf="@id/view_doctor_spesialis"
            app:layout_constraintBottom_toBottomOf="@id/view_doctor_spesialis"
            android:contentDescription="@string/doctor_photo" />

        <View
            android:id="@+id/view_patient"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_92"
            android:layout_marginTop="@dimen/dimens_24"
            android:layout_marginStart="@dimen/dimens_16"
            android:background="@drawable/bg_info_doctor"
            app:layout_constraintTop_toBottomOf="@id/view_doctor_spesialis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_experience"/>

        <TextView
            android:id="@+id/tv_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_grey"
            android:text="@string/patient"
            android:textSize="@dimen/font_16"
            app:layout_constraintTop_toTopOf="@id/view_patient"
            app:layout_constraintStart_toStartOf="@id/view_patient"
            app:layout_constraintEnd_toEndOf="@id/view_patient"
            app:layout_constraintBottom_toTopOf="@id/tv_number_patient"/>

        <TextView
            android:id="@+id/tv_number_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            tools:text="@string/number_patient"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            app:layout_constraintTop_toBottomOf="@id/tv_patient"
            app:layout_constraintStart_toStartOf="@id/view_patient"
            app:layout_constraintEnd_toEndOf="@id/view_patient"
            app:layout_constraintBottom_toBottomOf="@id/view_patient"/>

        <View
            android:id="@+id/view_experience"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="@dimen/dimens_92"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_24"
            android:background="@drawable/bg_info_doctor"
            app:layout_constraintTop_toBottomOf="@id/view_doctor_spesialis"
            app:layout_constraintEnd_toStartOf="@id/view_rating"
            app:layout_constraintStart_toEndOf="@id/view_patient" />

        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_grey"
            android:text="@string/experience"
            android:textSize="@dimen/font_16"
            app:layout_constraintTop_toTopOf="@id/view_experience"
            app:layout_constraintStart_toStartOf="@id/view_experience"
            app:layout_constraintEnd_toEndOf="@id/view_experience"
            app:layout_constraintBottom_toTopOf="@id/tv_number_experience" />

        <TextView
            android:id="@+id/tv_number_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            tools:text="@string/years"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            app:layout_constraintTop_toBottomOf="@id/tv_experience"
            app:layout_constraintStart_toStartOf="@id/view_experience"
            app:layout_constraintEnd_toEndOf="@id/view_experience"
            app:layout_constraintBottom_toBottomOf="@id/view_experience"/>

        <View
            android:id="@+id/view_rating"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="@dimen/dimens_92"
            android:layout_marginTop="@dimen/dimens_24"
            android:layout_marginEnd="@dimen/dimens_16"
            android:background="@drawable/bg_info_doctor"
            app:layout_constraintTop_toBottomOf="@id/view_doctor_spesialis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_experience" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_grey"
            android:text="@string/rating"
            android:textSize="@dimen/font_16"
            app:layout_constraintTop_toTopOf="@id/view_rating"
            app:layout_constraintStart_toStartOf="@id/view_rating"
            app:layout_constraintEnd_toEndOf="@id/view_rating"
            app:layout_constraintBottom_toTopOf="@id/tv_number_rating" />

        <TextView
            android:id="@+id/tv_number_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_20"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/rating_number"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            app:layout_constraintTop_toBottomOf="@id/tv_rating"
            app:layout_constraintStart_toStartOf="@id/view_rating"
            app:layout_constraintEnd_toEndOf="@id/view_rating"
            app:layout_constraintBottom_toBottomOf="@id/view_rating" />

        <TextView
            android:id="@+id/tv_about_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_32"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/about_doctor"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_patient" />

        <TextView
            android:id="@+id/tv_desc_about_doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_marginEnd="@dimen/dimens_16"
            android:fontFamily="@font/poppins_regular"
            tools:text="@string/text_about_doctor"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_doctor" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_32"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/location"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_about_doctor" />

        <View
            android:id="@+id/view_icon_location"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="@dimen/dimens_50"
            android:layout_marginStart="@dimen/dimens_16"
            android:background="@drawable/bg_icon_location"
            app:layout_constraintTop_toTopOf="@id/tv_location_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_location_address"/>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:layout_constraintTop_toTopOf="@id/view_icon_location"
            app:layout_constraintStart_toStartOf="@id/view_icon_location"
            app:layout_constraintEnd_toEndOf="@id/view_icon_location"
            app:layout_constraintBottom_toBottomOf="@id/view_icon_location"
            android:contentDescription="@string/icon_location" />

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_12"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/rs_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16"
            app:layout_constraintStart_toEndOf="@+id/view_icon_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_location_address"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:fontFamily="@font/poppins_regular"
            tools:text="@string/address"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_14"
            app:layout_constraintStart_toEndOf="@+id/view_icon_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_name" />

        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_32"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/schedule"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            app:layout_constraintTop_toBottomOf="@id/tv_location_address"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedule"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="@dimen/dimens_100"
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_marginStart="@dimen/dimens_16"
            tools:listitem="@layout/item_schedule_doctor"
            app:layout_constraintTop_toBottomOf="@id/tv_schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_32"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_18"
            android:text="@string/education"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_schedule" />

        <TextView
            android:id="@+id/tv_university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_12"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/ugm"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_education" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16"
            android:fontFamily="@font/poppins_regular"
            tools:text="@string/dokter_spesialis_anestesiologi"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_university_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_appointment"
            style="@style/buttonRounded"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_64"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_48"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_32"
            android:backgroundTint="@color/button"
            android:text="@string/book_appointment"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_major" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>