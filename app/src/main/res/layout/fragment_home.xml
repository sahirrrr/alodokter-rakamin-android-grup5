<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:text="@string/hello"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_16"
        android:text="@string/guest_user"
        app:layout_constraintTop_toBottomOf="@id/tv_hello"
        app:layout_constraintStart_toStartOf="@id/tv_hello"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/dimens_50"
        android:layout_height="@dimen/dimens_50"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:src="@drawable/profile"
        app:riv_corner_radius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SearchView
        android:id="@+id/sv_doctor"
        android:theme="@style/AppSearchView"
        android:background="@drawable/bg_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:searchIcon="@drawable/ic_search"
        android:iconifiedByDefault="false"
        android:queryHint="@string/query_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title_appointment_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_32"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_18"
        android:text="@string/appointment_today"
        app:layout_constraintTop_toBottomOf="@id/sv_doctor"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/view_appointment_today"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_144"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:background="@drawable/bg_appointment_today"
        app:layout_constraintTop_toBottomOf="@id/tv_title_appointment_today"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_doctor"
        android:layout_width="@dimen/dimens_50"
        android:layout_height="@dimen/dimens_50"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginStart="@dimen/dimens_16"
        android:src="@drawable/ic_launcher_background"
        app:riv_corner_radius="50dp"
        app:layout_constraintTop_toTopOf="@id/view_appointment_today"
        app:layout_constraintStart_toStartOf="@id/view_appointment_today" />

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:text="@string/doctor_name"
        app:layout_constraintTop_toTopOf="@id/iv_doctor"
        app:layout_constraintStart_toEndOf="@id/iv_doctor"/>

    <TextView
        android:id="@+id/tv_doctor_specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        android:text="@string/doctor_specialist"
        app:layout_constraintBottom_toBottomOf="@id/iv_doctor"
        app:layout_constraintStart_toEndOf="@id/iv_doctor"/>

    <View
        android:id="@+id/view_schedule"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimens_52"
        android:layout_marginTop="@dimen/dimens_10"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:background="@drawable/bg_schedule"
        app:layout_constraintTop_toBottomOf="@id/iv_doctor"
        app:layout_constraintStart_toStartOf="@id/view_appointment_today"
        app:layout_constraintEnd_toEndOf="@id/view_appointment_today" />

    <ImageView
        android:id="@+id/ic_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        android:src="@drawable/ic_booking"
        app:layout_constraintTop_toTopOf="@id/view_schedule"
        app:layout_constraintStart_toStartOf="@id/view_schedule"
        app:layout_constraintBottom_toBottomOf="@id/view_schedule"
        app:tint="@color/white"
        android:contentDescription="@string/icon_schedule" />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        android:text="@string/booking_schedule"
        app:layout_constraintTop_toTopOf="@id/view_schedule"
        app:layout_constraintStart_toEndOf="@id/ic_schedule"
        app:layout_constraintBottom_toBottomOf="@id/view_schedule"/>

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_16"
        android:src="@drawable/ic_time"
        app:layout_constraintTop_toTopOf="@id/view_schedule"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/view_schedule"
        app:tint="@color/white"
        android:contentDescription="@string/icon_schedule" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_16"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        android:text="@string/booking_time"
        app:layout_constraintTop_toTopOf="@id/view_schedule"
        app:layout_constraintEnd_toEndOf="@id/view_schedule"
        app:layout_constraintBottom_toBottomOf="@id/view_schedule"/>

    <TextView
        android:id="@+id/tv_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_32"
        android:layout_marginStart="@dimen/dimens_16"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_18"
        android:text="@string/article"
        app:layout_constraintTop_toBottomOf="@id/view_appointment_today"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_16"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_12"
        android:text="@string/see_more"
        app:layout_constraintTop_toTopOf="@id/tv_article"
        app:layout_constraintBottom_toBottomOf="@id/tv_article"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        app:layout_constraintTop_toBottomOf="@id/tv_article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_article"/>
</androidx.constraintlayout.widget.ConstraintLayout>