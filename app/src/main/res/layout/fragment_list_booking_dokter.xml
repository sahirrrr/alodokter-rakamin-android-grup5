<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<TextView
    android:id="@+id/tv_buat_janji"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_16"
    android:layout_marginTop="@dimen/dimens_16"
    android:fontFamily="@font/poppins_medium"
    android:textSize="@dimen/font_18"
    android:text="@string/buat_janji"
    android:textColor="@color/text_black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<SearchView
    android:id="@+id/sv_list_dokter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_16"
    android:layout_marginTop="@dimen/dimens_24"
    android:layout_marginEnd="@dimen/dimens_16"
    android:background="@drawable/bg_search"
    android:iconifiedByDefault="false"
    android:queryHint="@string/query_hint"
    android:searchIcon="@drawable/ic_search"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_buat_janji"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_booking_dokter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_16"
    android:layout_marginTop="@dimen/dimens_32"
    android:layout_marginEnd="@dimen/dimens_16"
    app:layout_constraintTop_toBottomOf="@id/sv_list_dokter"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:listitem="@layout/item_list_booking_dokter"/>

<ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>