<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_48"
        android:background="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_number" />

    <ImageView
        android:id="@+id/iv_personal_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_configure"
        android:layout_marginStart="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="@+id/view_profile"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile"
        android:contentDescription="@string/icon_personal_data" />

    <TextView
        android:id="@+id/tv_personal_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/font_14"
        android:text="@string/personal_data"
        android:textColor="@color/text_black"
        android:layout_marginStart="@dimen/dimens_16"
        app:layout_constraintStart_toEndOf="@+id/iv_personal_data"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile" />

    <ImageView
        android:id="@+id/iv_forward_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        app:layout_constraintEnd_toEndOf="@+id/view_profile"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile"
        android:contentDescription="@string/icon_forward" />

    <View
        android:id="@+id/view_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        android:background="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile" />

    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alert_info"
        android:layout_marginStart="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="@+id/view_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help"
        android:contentDescription="@string/icon_help" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/font_14"
        android:text="@string/help"
        android:textColor="@color/text_black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help" />

    <ImageView
        android:id="@+id/iv_forward_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginEnd="@dimen/dimens_16"
        app:layout_constraintEnd_toEndOf="@+id/view_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help"
        android:contentDescription="@string/icon_forward" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/dimens_60"
        android:layout_height="@dimen/dimens_60"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_24"
        android:src="@drawable/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dimens_10" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        tools:text="@string/label_name"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toTopOf="@id/tv_number"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        tools:text="@string/label_number"
        android:textSize="@dimen/font_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/buttonRounded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_56"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_48"
        android:layout_marginEnd="@dimen/dimens_16"
        android:backgroundTint="@color/button"
        android:text="@string/log_out"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/view_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>