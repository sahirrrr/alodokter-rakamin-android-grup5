<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_profile"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_number" />

    <ImageView
        android:id="@+id/iv_personal_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_configure"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/view_profile"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile"

        />


    <TextView
        android:id="@+id/tv_personal_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_data"
        android:textColor="@color/text_black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_personal_data"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile"
        />

    <ImageView
        android:id="@+id/iv_forward1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/view_profile"
        app:layout_constraintTop_toTopOf="@+id/view_profile"
        app:layout_constraintBottom_toBottomOf="@+id/view_profile"
        />


    <View
        android:id="@+id/view_help"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile" />

    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alert_info"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/view_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help"

        />


    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:textColor="@color/text_black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help"
        />

    <ImageView
        android:id="@+id/iv_forward2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/view_help"
        app:layout_constraintTop_toTopOf="@+id/view_help"
        app:layout_constraintBottom_toBottomOf="@+id/view_help"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"

        />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/label_name"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toTopOf="@id/tv_number"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/label_number"
        android:textSize="@dimen/font_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/button"
        android:text="@string/log_out"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/view_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>